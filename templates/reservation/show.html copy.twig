{% extends 'front.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
<section class="service_section layout_padding">
    <div class="container ">
      <div class="heading_container heading_center">
        <h2>My <span style="color : bleu;">Reservations</span></h2>
      </div>
      <div class="row">

   {% for reservation in reservations %}

 <div class="col-sm-6 col-md-6">
          <div class="box ">
            

            <div class="detail-box">
              <h5>
                {{reservation.type}}
              </h5>
              <p>
             <strong>  Comment : </strong> {{reservation.comment}}
              </p>
              <p>
               <strong>  Price per hour : </strong>  {{reservation.price}} <strong> $  </strong>
              </p>
              <div class="detail-box">
               <strong>  Date  : </strong> {{ reservation.getDateRes() ? reservation.getDateRes()|date('Y-m-d') : '' }}
            </div>
            </div>
              <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}"style="color : bleu; "><strong>Edit</strong></a>
              

    {{ include('reservation/_delete_form.html.twig') }}
          </div>
            </div>

        {% endfor %}
      </div>
     
    </div>
  </section>


{% endblock %}


